@model IEnumerable<PetShop.Data.Model.Animal>

@{
    ViewData["Title"] = "Index";
}
<body class="bodyStart" >
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.PhtotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            
                <td>
                    <img src="@item.PhtotoUrl" class = "col-sm-3"> 
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="Customers" asp-action="Index" asp-route-id="@item.AnimalId">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
</body>